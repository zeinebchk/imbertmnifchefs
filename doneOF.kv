<DoneOF>:
    name: "doneof"

    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(10)
        padding: dp(20)

        MDTopAppBar:
            title: "Ordre de fabrications terminés"
            elevation: 2
            md_bg_color: 0.133, 0.427, 0.408, 1
            left_action_items: [["menu", lambda x: app.root.ids.main_screen.ids.nav_drawer.set_state("toggle")]]

        BoxLayout:
            orientation: "horizontal"
            spacing: dp(10)
            padding: dp(0)  # ✅ Moins de padding vertical
            size_hint_y: None
            height: dp(50)  # ✅ Légèrement plus grand pour que tout soit centré

            MDFloatingActionButton:
                icon: "calendar"
                size_hint: None, None
                size: "40dp", "40dp"
                md_bg_color: 0.133, 0.427, 0.408, 1
                on_release: root.show_date_picker()
                pos_hint: {"center_y": 0.5}  # ✅ Centré verticalement

            MDLabel:
                id: date_id
                text: "Date ici"
                size_hint_x: 1
                valign: "middle"
                halign: "left"
                text_size: self.size
                height: self.texture_size[1]
                pos_hint: {"center_y": 0.5}  # ✅ Centré verticalement

        ScrollView:
            canvas.before:
                Color:
                    rgba: 0.95, 0.95, 0.95, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDBoxLayout:
                id: table_container
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: dp(10)
